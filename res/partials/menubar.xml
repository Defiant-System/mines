<MenuBar>
	<Menu name="Mines">
		<Menu name="About Mines"/>
		<Menu type="divider"/>
		<Menu name="New Game" click="new-game"/>
		<Menu name="Difficulty">
			<Menu name="Beginner" check-group="game-option" click="new-game" arg="10"/>
			<Menu name="Intermediate" check-group="game-option" click="new-game" arg="20" is-checked="1"/>
			<Menu name="Expert" check-group="game-option" click="new-game" arg="99"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Hide Mines"/>
		<Menu name="Hide Others"/>
		<Menu name="Show All" disabled="1"/>
		<Menu type="divider"/>
		<Menu name="Quit Mines" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="How To Play" shell="win -h"/>
		<Menu type="divider"/>
		<Menu name="Source Code"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
</MenuBar>