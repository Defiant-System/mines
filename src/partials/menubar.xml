<MenuBar>
	<Menu name="Mines">
		<Menu name="About Mines" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="New Game" click="new-game"/>
		<Menu name="Theme">
			<Menu name="Modern" check-group="game-theme" click="set-theme" arg="modern" is-checked="1"/>
			<Menu name="Classic" check-group="game-theme" click="set-theme" arg="classic"/>
		</Menu>
		<Menu name="Difficulty">
			<Menu name="Beginner" check-group="board-size" click="new-game" arg="10"/>
			<Menu name="Intermediate" check-group="board-size" click="new-game" arg="20" is-checked="1"/>
			<Menu name="Expert" check-group="board-size" click="new-game" arg="99"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Output PGN" click="output-pgn"/>
		<Menu type="divider"/>
		<Menu name="Quit Mines" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="How To Play" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="Source Code"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
</MenuBar>